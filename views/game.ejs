<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <title></title>
  </head>
  <body class="body">
    <% include ../includes/game-header.ejs %>
    <div class="modal" id="myModal">
      <div class="modal-content">
        <div id="question" style="margin-bottom: 10px;">
        </div>
        <input type="text" id="answer" />
        <button id="submit-answer">Submit</button>
      </div>
    </div>
    <div class="container" id="button-box">
      <button class="game-btn" id="new-game" type="button" onclick="startGame()">New Game</button>
      <button class="game-btn" id="high-scores" type="button" onclick="highScores()">High Scores</button>
    </div>
    <div class="container" id="game-board">
      <div class="row" id="top-row">
        <div class="game-space" id="space-one">
        </div>
        <div class="game-space" id="space-two">
        </div>
        <div class="game-space" id="space-three">
        </div>
      </div>
      <div class="row" id="mid-row">
        <div class="game-space" id="space-four">
        </div>
        <div class="game-space" id="space-five">
        </div>
        <div class="game-space" id="space-six">
        </div>
      </div>
      <div class="row" id="btm-row" id="space-one">
        <div class="game-space" id="space-seven">
        </div>
        <div class="game-space" id="space-eight">
        </div>
        <div class="game-space" id="space-nine">
        </div>
      </div>
    </div>
    <div class="container" id="score-board">
      <form action="score-submit.ejs" method="post">
        <div style="font-size: 14pt;">Score:</div>
        <output style="font-size: 14pt;" id="score" name="score">0</output> 
        <input type="text" id='user-submit-score' name="username" value="<%= user %>" />
        <input class="game-btn-sm" type="submit" value="Submit Score" />
      </form>
    </div>
    <script src="../js/tic-tac-toe.js"></script>
  </body>
</html>
